{
	"compilerOptions": {
		"target": "es5",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "./build",
		"sourceMap": true,
		"declaration": true // Generate d.ts files
	},
	"include": ["src/**/*"],
	"exclude": ["src/__tests__/**/*"]
}
